/* pages/search/search.wxss */
.searchContainer {
    padding: 10rpx 20rpx 0 20rpx;
}

.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}

.searchInput {
    position: relative;
    flex: 1;
    background-color: rgba(230, 230, 230, 0.3);
    border-radius: 30rpx;
}

.searchInput input {
    margin: 0 65rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.searchBtn {
    width: 100rpx;
    text-align: center;
    color: #888;
}

.searchIcon {
    position: absolute;
    left: 15rpx;
}

.clear {
    position: absolute;
    right: 25rpx;
    top: 0;
    font-size: 30rpx;
    color: #999;
}

.placeholder {
    font-size: 28rpx;
}

/* 热搜榜 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #eeeeee;
}

.hotList {
    display: flex;
    flex-wrap: wrap;
}

.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}

.hotItem .order {
    margin: 0 10rpx;
}

.hotItem .iconImage {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

/* 搜索内容 */
.searchContent {
    color: #aaa;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;
}

.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}

.searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
    white-space: nowrap;
}

/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.history .title {
    font-size: 28rpx;
}

.history .historyItem {
    font-size: 26rpx;
    background-color: #ededed;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    padding: 5rpx 30rpx;
    border-radius: 30rpx;
}

.history .delete {
    font-size: 36rpx;
}